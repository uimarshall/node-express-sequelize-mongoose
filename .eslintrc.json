{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.tsx"],
      "rules": {
        "no-console": "warn",
        "semi": "off",
        "no-extra-semi": "error",
        "semi-spacing": "error",
        "semi-style": "error",
        "no-shadow": "off",
        "no-param-reassign": "off",
        "eol-last": "off"
      }
    }
  ],

  "ignorePatterns": ["dist/", "build/"]
}
